{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@symbiota2/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@symbiota2/api-common": ["libs/api-common/src/index.ts"],
      "@symbiota2/api-auth": ["libs/api-auth/src/index.ts"],
      "@symbiota2/api-config": ["libs/api-config/src/index.ts"],
      "@symbiota2/api-database": ["libs/api-database/src/index.ts"],
      "@symbiota2/api-plugin-occurrence": [
        "libs/api-plugin-occurrence/src/index.ts"
      ],
      "@symbiota2/api-plugin-collection": [
        "libs/api-plugin-collection/src/index.ts"
      ],
      "@symbiota2/ui-common": ["libs/ui-common/src/index.ts"],
      "@symbiota2/ui-plugin-occurrence": [
        "libs/ui-plugin-occurrence/src/index.ts"
      ],
      "@symbiota2/ui-plugin-collection": [
        "libs/ui-plugin-collection/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
